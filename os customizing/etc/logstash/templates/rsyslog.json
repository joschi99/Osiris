curl -XDELETE 'localhost:9200/_template/rsyslog'

curl -XPUT localhost:9200/_template/rsyslog -d '
{ 
  "template": "rsyslog-*", 
  "settings": { "index.refresh_interval": "5s" }, 
  "mappings": { 
    "_default_": { 
      "_all": {
        "norms": false
      },
      "_meta": {
        "version": "2.4.0"
      },
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type" : "date"
        },
        "message": {
          "type": "text"
        },
        "facility-id": {
          "type": "integer"
        },
        "fromhost-ip": {
          "type": "ip"
        },
        "priority-id": {
          "type": "integer"
        },
        "severity-id": {
          "type": "integer"
        }
      }
    }
  }
}
'
