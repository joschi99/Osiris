{
  "template": "centreon-logs-*",
  "settings": { "index.refresh_interval": "5s" },
  "mappings": {
    "_default_": {
      "_all": {
        "norms" : false
      },
      "_meta": {
        "version": "2.4.0"
      },
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type" : "date"
        },
        "host_id": {
          "type" : "integer"
        },
        "retry": {
          "type" : "short"
        },
        "msg_type": {
          "type" : "short"
        },
        "typ": {
          "type" : "short"
        },
        "status": {
          "type" : "short"
        }
      }
    }
  }
}
