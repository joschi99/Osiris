{
  "template": "netflow-*",
  "settings": { "index.refresh_interval": "5s" },
  "mappings": {
    "_default_": {
      "_all": {
        "norms" : false
      },
      "_meta": {
        "version": "2.4.0"
      },
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "src_port": {
          "type": "keyword"
        },
        "dst_port": {
          "type": "keyword"
        },
        "direction": {
          "type": "keyword"
        },
        "protocol": {
          "type": "keyword"
        },
        "tcp_flags": {
          "type": "keyword"
        },
        "geoip_src": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "location": { 
              "type" : "geo_point"
            },
            "city_name": {
              "type": "keyword"
            },
            "country_name": {
              "type": "keyword"
            },
            "real_region_name": {
              "type": "keyword"
            },
            "region_name": {
              "type": "keyword" 
            }
          }
        },
        "geoip_dst": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "location": { 
              "type" : "geo_point"
            },
            "city_name": {
              "type": "keyword"
            },
            "country_name": {
              "type": "keyword"
            },
            "real_region_name": {
              "type": "keyword"
            },
            "region_name": {
              "type": "keyword" 
            }
          }
        },
        "netflow": {
          "dynamic": true,
          "type": "object",
          "properties": {
            "version": {
              "type": "integer"
            },
            "flow_seq_num": {
              "type": "long"
            },
            "engine_type": {
              "type": "integer"
            },
            "engine_id": {
              "type": "integer"
            },
            "sampling_algorithm": {
              "type": "integer"
            },
            "sampling_interval": {
              "type": "integer"
            },
            "flow_records": {
              "type": "integer"
            },
            "ipv4_src_addr": {
              "type": "ip"
            },
            "ipv4_dst_addr": {
              "type": "ip"
            },
            "ipv4_next_hop": {
              "type": "ip"
            },
            "input_snmp": {
              "type": "long"
            },
            "output_snmp": {
              "type": "long"
            },
            "in_pkts": {
              "type": "long"
            },
            "in_bytes": {
              "type": "long"
            },
            "first_switched": {
              "type": "date"
            },
            "last_switched": {
              "type": "date"
            },
            "l4_src_port": {
              "type": "keyword"
            },
            "l4_dst_port": {
              "type": "keyword"
            },
            "tcp_flags": {
              "type": "integer"
            },
            "protocol": {
              "type": "integer"
            },
            "src_tos": {
              "type": "integer"
            },
            "src_as": {
              "type": "integer"
            },
            "dst_as": {
              "type": "integer"
            },
            "src_mask": {
              "type": "integer"
            },
            "dst_mask": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
