{
  "template": "win_evt-*",
  "settings": { "index.refresh_interval": "5s" },
  "mappings": {
    "_default_": {
      "_all": {
        "norms" : false
      },
      "_meta": {
        "version": "2.4.0"
      },
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "EventTime": {
          "type": "date", 
          "format": "YYYY-MM-dd HH:mm:ss"
         },
        "EventID": {
          "type": "long"
        },
        "ProcessID": {
          "type": "long"
        },
        "LocalAddress": {
           "type": "ip"
        },
        "RemoteAddress": {
           "type": "ip"
        },
        "RecordNumber" : {
          "type": "long"
        },
        "Keywords" : {
          "type": "keyword"
        },
        "SeverityValue": {
          "type": "integer"
        },
        "Hostname": {
          "type": "keyword"
        },
        "SourceName": {
          "type": "keyword"
        },
        "ThreadID": {
          "type": "long"
        }
      }
    }
  }
}