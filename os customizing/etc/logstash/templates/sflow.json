{
  "template": "sflow-*",
  "settings": { "index.refresh_interval": "5s" },
  "mappings": {
    "_default_": {
      "_all": {
        "norms" : false
      },
      "_meta": {
        "version": "2.4.0"
      },
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "geoip_src": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "location": { 
              "type" : "geo_point"
            },
            "city_name": {
              "type": "keyword"
            },
            "country_name": {
              "type": "keyword"
            },
            "real_region_name": {
              "type": "keyword"
            },
            "region_name": {
              "type": "keyword" 
            }
          }
        },
        "geoip_dst": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "location": { 
              "type" : "geo_point"
            },
            "city_name": {
              "type": "keyword"
            },
            "country_name": {
              "type": "keyword"
            },
            "real_region_name": {
              "type": "keyword"
            },
            "region_name": {
              "type": "keyword" 
            }
          }
        },
        "sflow": {
          "dynamic": true,
          "type": "object",
          "properties": {
            "engine_id": {
              "type": "keyword"
            },
            "bgp_next_hop_router": {
              "type": "ip"
            },
            "bytes_in": {
              "type": "long"
            },
            "bytes_out": {
              "type": "long"
            },
            "duration": {
              "type": "float"
            },
            "host": {
              "type": "ip"
            },
            "latency_app": {
              "type": "float"
            },
            "latency_client": {
              "type": "float"
            },
            "latency_server": {
              "type": "float"
            },
            "interface_in": {
              "type": "keyword"
            },
            "interface_out": {
              "type": "keyword"
            },
            "ip_dst": {
              "type": "ip"
            },
            "ip_src": {
              "type": "ip"
            },
            "mac_input_dst": {
              "type": "keyword"
            },
            "mac_input_src": {
              "type": "keyword"
            },
            "mac_output_dst": {
              "type": "keyword"
            },
            "mac_output_src": {
              "type": "keyword"
            },
            "netmask_dst": {
              "type": "integer"
            },
            "netmask_src": {
              "type": "integer"
            },
            "next_hop_router": {
              "type": "ip"
            },
            "pkts_in": {
              "type": "long"
            },
            "pkts_out": {
              "type": "long"
            },
            "protocol": {
              "type": "keyword"
            },
            "src_tos": {
              "type": "integer"
            },
            "system_id": {
              "type": "keyword"
            },
            "time_end": {
              "type": "date"
            },
            "time_start": {
              "type": "date"
            },
            "vlan_dst": {
              "type": "integer"
            },
            "vlan_src": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
