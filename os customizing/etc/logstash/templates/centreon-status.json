{
  "template": "centreon-status-*",
  "settings": { "index.refresh_interval": "5s" },
  "mappings": {
    "_default_": {
      "_all": {
        "norms" : false
      },
      "_meta": {
        "version": "2.4.0"
      },
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type" : "date"
        },
        "host": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "address": {
              "type": "ip"
            },
            "last_check": {
              "type": "date"
            },
            "last_hard_state_change": {
              "type": "date"
            },
            "last_notification": {
              "type": "date"
            },
            "last_state_change": {
              "type": "date"
            },
            "last_time_down": {
              "type": "date"
            },
            "last_time_unreachable": {
              "type": "date"
            },
            "last_time_up": {
              "type": "date"
            },
            "next_check": {
              "type": "date"
            },
            "next_notification": {
              "type": "date"
            }
          }
        },
        "service": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "last_hard_state_change": {
              "type" : "date"
            },
            "last_notification": {
              "type" : "date"
            },
            "last_state_change": {
              "type" : "date"
            },
            "last_time_critical": {
              "type" : "date"
            },
            "last_time_ok": {
              "type" : "date"
            },
            "last_time_unknown": {
              "type" : "date"
            },
            "last_time_warning": {
              "type" : "date"
            },
            "last_update": {
              "type" : "date"
            },
            "next_check": {
              "type" : "date"
            },
            "next_notification": {
              "type" : "date"
            },
            "host": {
              "type": "object",
              "dynamic": true,
              "properties": {
                "address": {
                  "type": "ip"
                }
              }  
            }
          }
        },
        "instance": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "start_time": {
              "type" : "date"
            },
            "last_alive": {
              "type" : "date"
            },
            "last_command_check": {
              "type" : "date"
            }
          }
        }
      }
    }
  }
}
